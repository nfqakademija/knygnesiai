{% extends 'base.html.twig' %}

{% block title %}Create Wish{% endblock %}

{% block body %}
    <div class="form-group">
        <div class="col-sm-12 col-md-6">
            {{ form_start(form) }}
            <div class="form-group">
                <label>Choose a category for which you will change your book:</label>
                {{ form_widget(form.category) }}
            </div>
            <button class="btn btn-success">Save</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}